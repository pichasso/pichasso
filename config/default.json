{
    "ImageSource": {
        "LoadById": {
            "Enabled": true,
            "SourcePath": "https://open.hpi.de/files/{id}" // will be used for resolving locations by id
        },
        "LoadExternalData": {
            "Enabled": true, // enable loading data by any url
            "ProtocolsAllowed": [
                "https",
                "http"
            ],
            "WhitelistRegex": [] // set url regex filters, one must match to proceed
        }
    },
    "ImageConversion": {
        "DefaultFormat": "accepted", // use best accepted by client or do not change ["accepted", "keep"]
        "DefaultQuality": 80, // range 0...100 (lowest...best) used for jpeg
        "DefaultCropping": "fill",
        "DefaultGravity": "entropy",
        "Progressive": true,
        "RemoveMetadata": true
    },
    "Caching":{
        "Expires": 2629000000,
        "Imagepath": "/tmp/imagecache/"
    }
}
