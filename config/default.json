{
    "ImageSource": {
        "LoadById": {
            "Enabled": true,
            "SourcePath": "https://open.hpi.de/files/{id}"
        },
        "LoadExternalData": {
            "Enabled": true,
            "ProtocolsAllowed": [
                "https",
                "http"
            ],
            "WhitelistRegex": [
                "/*/"
            ]
        },
        "MaxFileSize": 51200
    },
    "ImageConversion": {
        "DefaultCropping": "fill",
        "DefaultFormat": "accepted",
        "DefaultGravity": "entropy",
        "DefaultQuality": 80,
        "MaxEdgeLength": 3840,
        "Progressive": true
    },
    "Caching":{
        "Expires": 2629000000,
        "Imagepath": "/tmp/imagecache/"
    }
}
