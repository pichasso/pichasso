extends layout

block scripts
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')

    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css', integrity='sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp', crossorigin='anonymous')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js', integrity='sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa', crossorigin='anonymous')

    link(rel='stylesheet', href='//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css')
    script(src='//code.jquery.com/ui/1.12.1/jquery-ui.js')

    script(src='/js/test.js')


block content
    h1= 'test inteface'
    p= 'give me an image and let me modify it quickly for you'

    div.container-fluid
        div.row
            div.col-sm-6
                form#configure-form.form-horizontal(method="get" action="/image")

                    div.form-group
                        label.control-label.col-sm-4(for='url')= 'image'
                        div.col-sm-8
                            input#url.form-control(type='text', name='url', placeholder='give me any url to an image', required)

                    div.form-group
                        label.control-label.col-sm-4(for='width', name='width')= 'width'
                        div.col-sm-8
                            input#width.form-control(name='width', type='number', value=250)

                    div.form-group
                        label.control-label.col-sm-4(for='height', name='height')= 'height'
                        div.col-sm-8
                            input#height.form-control(name='height', type='number', value=250)

                    div.form-group
                        label.control-label.col-sm-4(for='crop', name='crop')= 'cropping'
                        div.col-sm-8
                            select#crop.form-control(name='crop')
                                option(value='fill')= 'fill (default)'
                                option(value='fit')= 'fit'
                                option(value='scale')= 'scale'

                    div.form-group
                        label.control-label.col-sm-4(for='gravity', name='gravity')= 'gravity'
                        div.col-sm-8
                            select#gravity.form-control(name='gravity')
                                option(value='entropy')= 'Shannon entropy (default)'
                                option(value='attention')= 'Luminance, color, skin tones'
                                option(value='faces')= 'Face detection'
                                option(value='center')= 'center (2nd default)'
                                option(value='north')= 'north'
                                option(value='east')= 'east'
                                option(value='south')= 'south'
                                option(value='west')= 'west'
                            div
                                em=('only considered, if crop is set to fill')

                    div.form-group
                        label.control-label.col-sm-4(for='format', name='format')= 'format'
                        div.col-sm-8
                            select#format.form-control(name='format')
                                option(value='')= 'best accepted (default)'
                                option(value='webp')= 'webp'
                                option(value='jpeg')= 'jpeg'
                                option(value='png')= 'png'
                                //option(value='guetzli')= 'guetzli'
                                //option(value='raz...ing')= 'raz...ing'

                    div.form-group
                        label.control-label.col-sm-4(for='quality', name='quality')= 'quality'
                        div.col-sm-8
                            input#quality(name='quality', type='hidden')
                            div#quality-slider
                                div#custom-quality-slider-handle.ui-slider-handle

                    div.form-group
                        div.col-sm-offset-4.col-sm-8
                            button#update-button.btn.btn-primary(type='submit')= 'do the magic...'
            div.col-sm-6
                div#result-image-thumbnail.image
                    img#result-image(src='https://placeholdit.imgix.net/~text?txtsize=33&txt=350%C3%97150&w=350&h=150')
